{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@colon/ui": ["packages/ui/src"],
      "@colon/tokens": ["packages/tokens/src"]
    }
  },
  "include": ["packages"]
}
